               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#navToAddPatientDossier" prefWidth="150.0" style="-fx-font-size: 12;" text="Dossier toevoegen" />
