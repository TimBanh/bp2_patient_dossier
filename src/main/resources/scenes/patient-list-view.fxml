               <children>
                  <Button mnemonicParsing="false" onAction="#navToAddPatient" prefWidth="150.0" text="Toevoegen" />
                  <Button mnemonicParsing="false" onAction="#navToEditPatient" prefWidth="150.0" text="Aanpassen" />
